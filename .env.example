# ══════════════════════════════════════════════════════════════
# CONFIGURAÇÃO DA APLICAÇÃO
# ══════════════════════════════════════════════════════════════

# ──────────────────────────────────────────────────────────────
# SERVIDOR
# ──────────────────────────────────────────────────────────────
PORT=3000
NODE_ENV=development

# ──────────────────────────────────────────────────────────────
# BANCO DE DADOS POSTGRESQL (DOCKER)
# ──────────────────────────────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nome_banco_dados
DB_USER=usuario_banco_dados
DB_PASSWORD=senha_banco_dados

# ──────────────────────────────────────────────────────────────
# CLOUDINARY (ARMAZENAMENTO DE ARQUIVOS)
# ──────────────────────────────────────────────────────────────
CLOUDINARY_CLOUD_NAME=seu_cloud_name_aqui
CLOUDINARY_API_KEY=sua_api_key_aqui
CLOUDINARY_API_SECRET=seu_api_secret_aqui

# ──────────────────────────────────────────────────────────────
# JWT (AUTENTICAÇÃO)
# ──────────────────────────────────────────────────────────────
JWT_SECRET=gere_um_valor_secreto_aqui
JWT_EXPIRES_IN=7d

# ──────────────────────────────────────────────────────────────
# ADMIN INICIAL
# ──────────────────────────────────────────────────────────────
ADMIN_NAME=admin_inicial
ADMIN_EMAIL=email_admin_inicial
ADMIN_PASSWORD=senha_admin_inicial

# ──────────────────────────────────────────────────────────────
# SEGURANÇA
# ──────────────────────────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100